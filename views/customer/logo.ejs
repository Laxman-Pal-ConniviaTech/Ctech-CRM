<%- include("../includes/head.ejs") %> <%- include("../includes/header.ejs") %>
<%- include("../includes/sidebar.ejs") %>
<div class="contents">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="breadcrumb-main">
          <h4 class="text-capitalize breadcrumb-title">Add New Logo</h4>
          <div onclick="showForm()" class="action-btn btn px-15 btn-primary">
            
              <i class="uil uil-plus"></i>Add Logo
          </div>
          <div class="breadcrumb-action justify-content-center flex-wrap">
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item">
                  <a href="#"><i class="uil uil-estate"></i>Home</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                  Add New Logo
                </li>
              </ol>
            </nav>
          </div>
        </div>
      </div>
    </div>
    <div style="display: none" id="addLogo" class="row">
      <div class="col-lg-12">
        <div class="card card-Vertical card-default card-md mb-4">
          <div class="card-body py-md-30">
            <form action="/customer/add-logo" method="post" enctype="multipart/form-data">
              <div class="row">
                <div class="card-body pb-md-40 pt-md-30">
                  <div class="col-md-12 mb-25">
                    <input
                      type="file"
                      name="logo"
                      class="form-control custom-file-input ip-gray radius-xs b-light px-15"
                      id="uploadImage"
                      onchange="PreviewImage();"
                    />
                  </div>
                  <img id="uploadPreview" style="width: 100%; height: 300px" />
                </div>
                <div class="col-md-6">
                  <div class="layout-button mt-0">
                    <button
                      type="button"
                      onclick="hideForm()"
                      class="btn btn-default btn-squared btn-light px-20"
                    >
                      cancel
                    </button>
                    <button
                      class="btn btn-primary btn-default btn-squared px-30"
                    >
                      save
                    </button>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="card card-Vertical card-default card-md mb-4">
          <div class="card-body py-md-30 text-center">
            <img
              style="width: 70%"
              src="/<%= logo %>"
              alt="logo"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include("../includes/footer.ejs") %>
<script type="text/javascript">
  function PreviewImage() {
    var oFReader = new FileReader();
    oFReader.readAsDataURL(document.getElementById("uploadImage").files[0]);

    oFReader.onload = function (oFREvent) {
      document.getElementById("uploadPreview").src = oFREvent.target.result;
    };
  }

  const logoForm = document.getElementById("addLogo");


  const showForm = ()=>{
    logoForm.style.display = 'block'
  }

  const hideForm = ()=>{
    logoForm.style.display = 'none'
  }

</script>
